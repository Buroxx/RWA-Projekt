

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content")
</head>
<body>

    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
        <div class='container-fluid'>
            <img src="/Images/logo.jpg" width="120" height="50" style="object-fit:scale-down">
            <a class="navbar-brand">
                RWA Apartments Admin
            </a>
            <button class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation'>
                <span class='navbar-toggler-icon'></span>
            </button>
            <div class='collapse navbar-collapse' id='navbarSupportedContent'>
                <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
                    <li class='nav-item'>
                        @Html.ActionLink("Search", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
                <ul class='navbar-nav d-flex'>
                    <li class='nav-item'>
                        @Html.ActionLink("Login", "Index", "Login",null, new { @class = "btn btn-danger" })
                    </li>
                    </ul>
            </div>
        </div>
    </nav>
    <div class="">
        @RenderBody()
    </div>
    <hr class='mt-4'>
    <div class='text-center'>
        <p>Fran Gregec-@DateTime.Now.Year&copy;</p>
    </div>
    @Scripts.Render("~/Scripts")
    @RenderSection("scripts", required: false)
</body>
</html>











